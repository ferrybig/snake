{
	"tasks": {
		"sass": {
			"sass": {
				"files": { 
					"public/css/style.css": "src/sass/style.scss"
				}
			}
		},
		"watch": {
			"sass": {
				"files": ["src/sass/**/*.scss"],
				"tasks": ["sass:sass"]
			}
		},
		"cssmin": {
			"target": {
				"files": [
					{
						"expand": true,
						"cwd": "public/css",
						"src": ["style.css"],
						"dest": "public/css",
						"ext": ".min.css"
					}
				]
			}
		}
	}
}
